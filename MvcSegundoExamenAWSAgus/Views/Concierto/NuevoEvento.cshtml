@model MvcSegundoExamenAWSAgus.Models.Evento

@{
    List<CategoriaEvento> categorias=(List<CategoriaEvento>)ViewData["CATEGORIAS"];
}

<h1>NuevoEvento</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdEvento" class="control-label"></label>
                <input class="form-control" name="idevento" />
                <span asp-validation-for="IdEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input class="form-control" name="nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artista" class="control-label"></label>
                <input class="form-control" name="artista" />
                <span asp-validation-for="Artista" class="text-danger"></span>
            </div>
            <select class="form-control" name="categoria">
                @foreach (CategoriaEvento cat in categorias)
                {
                    <option value="@cat.IdCategoria">
                        @cat.Nombre
                    </option>
                }
            </select>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
